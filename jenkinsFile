pipeline{
agent any 
environment{
notifyEmail= "kajal.miglani@nagarro.com"
}
tools{
maven 'maven_home'
}
triggers {
cron('0 08 * * *')
}
stages
{
stage ('code preparation"){
steps{
bat "echo Preparing code"
}
}

stage ('code build"){
steps{
bat "mvn clean"
}
}
stage ('code preparation"){
steps{
bat "mvn test"
}
}
}
post
{
success{
bat"echo success"
}
}
}

}
